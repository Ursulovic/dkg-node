# OpenAI Configuration (required for LangChain embeddings/LLM)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Observability (optional - enables tracing and monitoring)
# Get your API key from: https://smith.langchain.com/settings
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=plugin-bias-lens

# Research Tools
SERPAPI_API_KEY=your_serpapi_key
TAVILY_API_KEY=your_tavily_api_key

# Debug Mode
DEBUG=false

# BiasLens Knowledge Asset Configuration
PUBLISHER_NAME=BiasLens
BIASLENS_APP_URL=https://biaslens.ai
AGENT_VERSION=2.0
READ_COST_MULTIPLIER=2.0
TRAC_USD_RATE=0.5

# x402 Payment Protocol Configuration (Base Sepolia testnet)
# Server: Wallet address to receive payments (required for /x402/report endpoint)
PUBLISHER_WALLET_ADDRESS=0xYourWalletAddressHere
# Client: Private key for making paid requests (required for get-paid-bias-report MCP tool)
# WARNING: Never commit real private keys. Use a dedicated testnet wallet.
X402_CLIENT_PRIVATE_KEY=0xYourPrivateKeyHere
